<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Connection Status -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="âŒ Disconnected"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/disconnected"/>

        <!-- Sensor Data Display -->
        <LinearLayout
            android:id="@+id/sensorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š SENSOR DATA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvTripDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.000 km"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvSta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="STA 00+000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvMeterRemainder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0 km/h"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvElevation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00 m/sÂ²"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvBattery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00 V"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvTotalOdo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ODO: 0.0 m"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State: READY"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvSessionId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SID: 0"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvPacketCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Packets: 0"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvErrorCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Errors: 0"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvLastUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last: 0ms ago"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/gray"/>

            <!-- Calibration Info -->
            <TextView
                android:id="@+id/tvCalibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Wheel: 2.000m, Z: 0.000m/sÂ²"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <!-- Calibration Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ CALIBRATION"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <!-- Wheel Circumference -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etWheelValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Wheel (m)"
                    android:inputType="numberDecimal"
                    android:text="2.0"/>

                <Button
                    android:id="@+id/btnSetWheel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SET"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnGetWheel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GET"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvWheelInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wheel: 2.000 m"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Smoothing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etSmoothValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Smooth/Alpha"
                    android:inputType="numberDecimal"
                    android:text="0.25"/>

                <Button
                    android:id="@+id/btnSetSmooth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SET"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnGetSmooth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GET"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Z Offset -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etZOffsetValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Z Offset (m/sÂ²)"
                    android:inputType="numberDecimal"
                    android:text="0.0"/>

                <Button
                    android:id="@+id/btnSetZOffset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SET"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnGetZOffset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GET"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvZOffsetInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Z Offset: 0.000 m/sÂ²"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Control Buttons Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="â–¶ï¸ START"
                android:backgroundTint="@color/green"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="â¹ï¸ STOP"
                android:backgroundTint="@color/red"/>

            <Button
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="â¸ï¸ PAUSE"
                android:backgroundTint="@color/orange"/>

            <Button
                android:id="@+id/btnResetTrip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="ðŸ”„ RESET"/>

            <Button
                android:id="@+id/btnHardReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="ðŸ’£ HARD RESET"/>

            <Button
                android:id="@+id/btnNewSession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="ðŸ†• NEW SESSION"/>

            <Button
                android:id="@+id/btnNextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="ðŸ‘ï¸ NEXT VIEW"/>

            <Button
                android:id="@+id/btnGetData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="ðŸ“Š GET DATA"/>

            <Button
                android:id="@+id/btnGetBattery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="ðŸ”‹ BATTERY"/>
        </GridLayout>

        <!-- Additional Utility Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <Button
                android:id="@+id/btnGetSession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“‹ SESSION"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnGetCal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš™ï¸ CAL"
                android:layout_marginHorizontal="4dp"/>

            <Button
                android:id="@+id/btnGetErrors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ ERRORS"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Raw Command -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <EditText
                android:id="@+id/etCommand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Raw command..."
                android:imeOptions="actionSend"
                android:inputType="text"/>

            <Button
                android:id="@+id/btnSendCommand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SEND"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HELP"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Debug Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <Button
                android:id="@+id/btnDebugTrip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ› DEBUG"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnClearLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ§¹ CLEAR LOGS"
                android:layout_marginHorizontal="4dp"/>

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”„ REFRESH"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Stream Stats -->
        <TextView
            android:id="@+id/tvStreamStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Stream: 0 pps, Total: 0"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvRawData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RAW: "
            android:textSize="10sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="8dp"/>

        <!-- Log Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ LOGS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvLogCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logs: 0"
                android:textSize="12sp"/>

            <Switch
                android:id="@+id/switchAutoScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-scroll"
                android:textSize="12sp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/logListView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="8dp"
            android:background="@android:color/white"
            android:elevation="1dp"/>

    </LinearLayout>
</ScrollView>