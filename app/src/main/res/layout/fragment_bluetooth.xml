<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Connection Status -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="Disconnected"
            android:background="#F44336"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Sensor Data Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTripDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.000 km"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvSta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="STA 00+000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0 km/h"
                android:textSize="14sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvElevation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 m"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvBattery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 V"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvSessionId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SID: 0"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvPacketCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Packets: 0"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- State -->
        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State: READY"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Command Buttons Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="START"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="STOP"
                android:backgroundTint="#F44336"/>

            <Button
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="PAUSE"
                android:backgroundTint="#FF9800"/>

            <Button
                android:id="@+id/btnResetTrip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="RESET"/>

            <Button
                android:id="@+id/btnGetData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="GET DATA"/>

            <Button
                android:id="@+id/btnGetBattery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="BATTERY"/>

            <Button
                android:id="@+id/btnNewSession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="NEW SESSION"/>

            <Button
                android:id="@+id/btnNextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="NEXT VIEW"/>

            <Button
                android:id="@+id/btnClearLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="CLEAR LOGS"/>
        </GridLayout>

        <!-- Calibration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calibration"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etWheelValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Wheel (m)"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/btnSetWheel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etSmoothValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Smoothing"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/btnSetSmooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etZOffsetValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Z Offset"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/btnSetZOffset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"/>
        </LinearLayout>

        <!-- Manual Command -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etCommand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Manual command"
                android:imeOptions="actionSend"/>

            <Button
                android:id="@+id/btnSendCommand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND"/>
        </LinearLayout>

        <!-- Log Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ListView
            android:id="@+id/logListView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#f0f0f0"
            android:divider="#cccccc"
            android:dividerHeight="1dp"/>

    </LinearLayout>
</ScrollView>